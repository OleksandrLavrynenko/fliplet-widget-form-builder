<div :class="{ 'reduced-opacity': isHidden }" >
  <span v-if="isHidden" class="label label-default">{{T "widgets.formBuilder.dataSource.interface.hidden"}}</span>
  <div class="form-group row clearfix" :data-field="name">
    <div class="col-xs-12" v-if="_isFormField">
      <label class="control-label" :for="name">
        \{{ label }} <template v-if="required"><span class="required-info">*</span></template>
      </label>
    </div>
    <div class="col-xs-12">
      {{{ template }}}
    </div>
  </div>
</div>

